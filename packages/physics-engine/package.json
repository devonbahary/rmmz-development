{
  "name": "physics-engine",
  "version": "0.1.0",
  "description": "TypeScript 2D top-down physics engine with collision detection for circles and rectangles",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:tsc",
    "build:tsc": "tsc --project tsconfig.build.json --module ES2020 --outDir dist/esm",
    "build:test-app": "esbuild test-app.js --bundle --outfile=test-app.bundle.js --format=esm",
    "watch": "tsc --project tsconfig.build.json --module ES2020 --outDir dist/esm --watch",
    "watch:test-app": "esbuild test-app.js --bundle --outfile=test-app.bundle.js --format=esm --watch",
    "serve": "serve . -p 3000",
    "dev": "concurrently \"npm run watch:test-app\" \"npm run serve\" \"sleep 2 && open-cli http://localhost:3000/test-app.html\"",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "physics",
    "collision",
    "2d",
    "game",
    "rpg-maker",
    "typescript",
    "aabb",
    "circle",
    "rectangle"
  ],
  "author": "Devon",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "open-cli": "^8.0.0",
    "prettier": "^3.0.0",
    "serve": "^14.2.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  }
}
