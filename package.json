{
  "name": "collision-detection-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/rmmz-plugins/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "watch": "concurrently --names \"physics-engine,plugins\" --prefix-colors \"blue,green\" \"npm run watch --workspace=physics-engine\" \"npm run watch --workspace=rmmz-plugins\"",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint packages/collision-detection/src/**/*.ts",
    "lint:fix": "eslint packages/collision-detection/src/**/*.ts --fix",
    "format": "prettier --write \"packages/collision-detection/**/*.ts\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.2.0",
    "prettier": "^3.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}
